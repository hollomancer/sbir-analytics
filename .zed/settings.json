{
  "python": {
    "path": ".venv/bin/python",
    "virtual_environment": ".venv"
  },
  "format_on_save": true,
  "formatter": "black",
  "tab_size": 4,
  "hard_tabs": false,
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis.typeCheckingMode": "standard",
        "python.analysis.extraPaths": ["src"]
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": true,
      "formatter": "black",
      "language_servers": ["pyright"]
    }
  }
}
